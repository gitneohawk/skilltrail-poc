{
  "auth": {
    "identityProviders": {
      "github": {
        "enabled": true
      },
      "google": {
        "enabled": false
      },
      "microsoft": {
        "registration": {
          "clientId": "07d5a5e3-48a2-4083-81d5-9a3bf15616e1",
          "clientSecretSettingName": "MICROSOFT_CLIENT_SECRET"
        },
        "enabled": true
      }
    }
  },
  "routes": [
    {
      "route": "/api/*"
    },
    {
      "route": "/interview",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/login.html"
    },
    {
      "route": "/",
      "rewrite": "/index.html"
    },
    {
      "route": "/chat",
      "rewrite": "/chat.html",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/.auth/*"]
  }
}